<glsl-live-coder-project version="0.9.5">
  <shaders>
    <vertex><![CDATA[attribute vec4 aVertex;
attribute vec4 aTexCoord;
varying vec4 vTexCoord;

void main(void)
{
    vTexCoord = aTexCoord;
    gl_Position = aVertex;
}
]]></vertex>
    <fragment><![CDATA[// spot light by rasmuskaae
// https://www.shadertoy.com/view/ldXGRM

varying vec4 vTexCoord;
uniform sampler2D uTexture;
uniform float uT;
uniform vec2 uResolution;
uniform vec2 uMouse;

float rand(vec2 co)
{
  return 0.5+0.5*fract(sin(dot(co.xy ,vec2(12.9898,78.233))) * 43758.5453);
}

vec4 t(vec2 uv)
{
  	float j = sin(uv.y*2.0*3.14+uv.x*2.0+uT*2.0);
  	float i = sin(uv.x*10.0-uv.y*2.0*3.14+uT*3.0);
	  	float p = clamp(i,0.0,0.2)-clamp(j,0.0,0.2);
  	float n = -clamp(i,-0.2,0.0)+0.2*clamp(j,-0.2,0.0);
	  	return 5.0*(vec4(1.0,0.25,0.125,1.0)*n + vec4(1.0,1.0,1.0,1.0)*p);
}


void main(void)
{
  	vec2 uv = gl_FragCoord.xy / uResolution - 0.5;
  	vec3 p = vec3(sin(uT*1.2), cos(uT), sin(uT));
	  	float l = 2.0 - pow(distance(p, vec3(uv, 0.0)), 2.0);
	  	gl_FragColor = t(uv + l) + l;
}
]]></fragment>
  </shaders>
